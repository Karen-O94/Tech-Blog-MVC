<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-10 bg-light text-dark">
    <h2>
      <a href="/post/{{post.id}}">{{post.name}}</a>
    </h2>
    <p>
      {{post.description}}
    </p>
  </div>
  <div class="row">
    <div class="col-md-10">
      <p class="bg-secondary text-white">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
  </div>
</div>
{{/each}}