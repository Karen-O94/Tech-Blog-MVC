<div class="col-md-6 login-form">
    <div class="container mt-4 pt-1">
        <h2 style="background-color: rgb(243, 234, 102); border-radius: 0.2rem; padding: 10px ">Login</h2>
        <div class="mb-3">
            <label class="email-login">Email: </label>
            <input type="email" class="form-control" id="email-login" placeholder="Email">
        </div>
        <div class="mb-3">
            <label class="password-login">Password: </label>
            <input type="password" class="form-control" id="password-login" ></input>
        </div>
        <div class="mb-3">
            <button type="submit" class="btn btn-outline-success">Login</button>
        </div>
    </div>
</div>

